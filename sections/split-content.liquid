{%- style -%}
  #broadcast-split-{{ section.id }} {
    display: grid;
    grid-template-columns: {% if section.settings.layout == 'image-left' %}1fr 1fr{% else %}1fr 1fr{% endif %};
    align-items: center;
    gap: 0;
    min-height: 600px;
    background: var(--color-background);
  }

  #broadcast-split-{{ section.id }} .split-image-wrapper {
    height: 100%;
    min-height: 600px;
    order: {% if section.settings.layout == 'image-left' %}1{% else %}2{% endif %};
  }

  #broadcast-split-{{ section.id }} .split-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  #broadcast-split-{{ section.id }} .split-content {
    padding: 4rem;
    order: {% if section.settings.layout == 'image-left' %}2{% else %}1{% endif %};
    background: {{ section.settings.content_background }};
  }

  #broadcast-split-{{ section.id }} .split-eyebrow {
    font-size: 0.875rem;
    font-weight: 500;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    margin-bottom: 1rem;
    color: var(--color-turmeric);
  }

  #broadcast-split-{{ section.id }} .split-heading {
    font-family: var(--font-display);
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 600;
    line-height: 1.2;
    margin-bottom: 1.5rem;
  }

  #broadcast-split-{{ section.id }} .split-text {
    font-size: 1.125rem;
    line-height: 1.7;
    margin-bottom: 2rem;
    color: var(--color-text-secondary);
  }

  @media (max-width: 968px) {
    #broadcast-split-{{ section.id }} {
      grid-template-columns: 1fr;
      min-height: auto;
    }

    #broadcast-split-{{ section.id }} .split-image-wrapper,
    #broadcast-split-{{ section.id }} .split-content {
      order: unset !important;
      min-height: 400px;
    }

    #broadcast-split-{{ section.id }} .split-content {
      padding: 2rem 1.5rem;
    }
  }
{%- endstyle -%}

<div id="broadcast-split-{{ section.id }}" class="broadcast-split-section" data-scroll-animate="fade-up">
  <div class="split-image-wrapper" data-animate="slide-left">
    {% if section.settings.image != blank %}
      <img
        src="{{ section.settings.image | image_url: width: 1200 }}"
        alt="{{ section.settings.image.alt | escape }}"
        class="split-image"
        loading="lazy"
        width="1200"
        height="800"
      >
    {% else %}
      <div class="split-image" style="background: var(--color-background-secondary);"></div>
    {% endif %}
  </div>

  <div class="split-content" data-animate="slide-right">
    {% if section.settings.eyebrow != blank %}
      <div class="split-eyebrow">{{ section.settings.eyebrow }}</div>
    {% endif %}

    {% if section.settings.heading != blank %}
      <h2 class="split-heading">{{ section.settings.heading }}</h2>
    {% endif %}

    {% if section.settings.text != blank %}
      <div class="split-text">{{ section.settings.text | newline_to_br }}</div>
    {% endif %}

    {% if section.settings.button_label != blank %}
      <a href="{{ section.settings.button_link }}" class="btn btn-primary">
        {{ section.settings.button_label }}
      </a>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Broadcast Split Content",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "select",
      "id": "layout",
      "label": "Layout",
      "options": [
        {"value": "image-left", "label": "Image Left"},
        {"value": "image-right", "label": "Image Right"}
      ],
      "default": "image-left"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow Text",
      "default": "Our Story"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Crafted with Care"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Description",
      "default": "Every bottle tells a story of tradition, craftsmanship, and the perfect balance of heat and flavor."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "color",
      "id": "content_background",
      "label": "Content Background Color",
      "default": "#FFFBF5"
    }
  ],
  "presets": [
    {
      "name": "Broadcast Split Content"
    }
  ]
}
{% endschema %}
