<style>
.recipes-hero {
  min-height: 60vh;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  position: relative;
  background: linear-gradient(135deg, #0a0a0a 0%, #1a1a1a 100%);
  overflow: hidden;
  padding: 4rem 2rem;
}

.recipes-hero::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: radial-gradient(circle at 30% 50%, rgba(255, 46, 126, 0.15) 0%, transparent 50%),
              radial-gradient(circle at 70% 50%, rgba(186, 148, 255, 0.15) 0%, transparent 50%);
  animation: pulse 8s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 0.5; }
  50% { opacity: 1; }
}

.recipes-hero__content {
  position: relative;
  z-index: 1;
  max-width: 900px;
  animation: fadeUp 1s ease forwards;
}

.recipes-hero__title {
  font-family: 'Playfair Display', Georgia, serif;
  font-size: clamp(3rem, 8vw, 5rem);
  font-weight: 700;
  margin-bottom: 1.5rem;
  background: linear-gradient(135deg, #FF2E7E 0%, #BA94FF 50%, #00D4FF 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  background-size: 200% auto;
  animation: gradientShift 6s ease-in-out infinite;
}

.recipes-hero__subtitle {
  font-size: 1.25rem;
  line-height: 1.8;
  color: rgba(255, 255, 255, 0.8);
  max-width: 700px;
  margin: 0 auto;
}

@keyframes fadeUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes gradientShift {
  0%, 100% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
}
</style>

<section class="recipes-hero">
  <div class="recipes-hero__content">
    <h1 class="recipes-hero__title">{{ section.settings.title }}</h1>
    <p class="recipes-hero__subtitle">{{ section.settings.subtitle }}</p>
  </div>
</section>

{% schema %}
{
  "name": "Recipes Hero",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Flavor in Motion"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Explore recipes that bring heat to your kitchen"
    }
  ]
}
{% endschema %}
