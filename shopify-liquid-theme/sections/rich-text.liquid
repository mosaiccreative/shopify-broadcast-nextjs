{%- style -%}
  #broadcast-text-{{ section.id }} {
    padding: 5rem 2rem;
    background: {{ section.settings.background_color }};
  }

  #broadcast-text-{{ section.id }} .rich-text-container {
    max-width: {{ section.settings.content_width }}px;
    margin: 0 auto;
    text-align: {{ section.settings.alignment }};
  }

  #broadcast-text-{{ section.id }} .rich-text-eyebrow {
    font-size: 0.875rem;
    font-weight: 500;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    margin-bottom: 1rem;
    color: var(--color-turmeric);
  }

  #broadcast-text-{{ section.id }} .rich-text-heading {
    font-family: var(--font-display);
    font-size: clamp(2rem, 4vw, 3.5rem);
    font-weight: 600;
    line-height: 1.2;
    margin-bottom: 2rem;
  }

  #broadcast-text-{{ section.id }} .rich-text-content {
    font-size: 1.25rem;
    line-height: 1.8;
    color: var(--color-text-secondary);
  }

  #broadcast-text-{{ section.id }} .rich-text-content p {
    margin-bottom: 1.5rem;
  }

  @media (max-width: 768px) {
    #broadcast-text-{{ section.id }} {
      padding: 3rem 1.5rem;
    }
  }
{%- endstyle -%}

<div id="broadcast-text-{{ section.id }}" class="broadcast-rich-text-section">
  <div class="rich-text-container">
    {% if section.settings.eyebrow != blank %}
      <div class="rich-text-eyebrow">{{ section.settings.eyebrow }}</div>
    {% endif %}

    {% if section.settings.heading != blank %}
      <h2 class="rich-text-heading">{{ section.settings.heading }}</h2>
    {% endif %}

    {% if section.settings.text != blank %}
      <div class="rich-text-content">
        {{ section.settings.text }}
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Broadcast Rich Text",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow Text"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our Philosophy"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Content",
      "default": "<p>Every product we create is a labor of love, combining traditional techniques with modern innovation.</p>"
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "Text Alignment",
      "options": [
        {"value": "left", "label": "Left"},
        {"value": "center", "label": "Center"},
        {"value": "right", "label": "Right"}
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "content_width",
      "min": 600,
      "max": 1200,
      "step": 50,
      "unit": "px",
      "label": "Content Max Width",
      "default": 800
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#FFFBF5"
    }
  ],
  "presets": [
    {
      "name": "Broadcast Rich Text"
    }
  ]
}
{% endschema %}
