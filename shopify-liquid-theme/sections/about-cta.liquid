<style>
.about-cta {
  padding: 8rem 2rem;
  background: linear-gradient(135deg, #0a0a0a 0%, #1a1a1a 100%);
  position: relative;
  overflow: hidden;
}

.about-cta::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: radial-gradient(circle at 50% 50%, rgba(255, 46, 126, 0.15) 0%, transparent 70%);
  animation: pulse 6s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 0.5; transform: scale(1); }
  50% { opacity: 1; transform: scale(1.1); }
}

.about-cta__content {
  position: relative;
  z-index: 1;
  text-align: center;
  max-width: 800px;
  margin: 0 auto;
}

.about-cta__title {
  font-family: 'Playfair Display', Georgia, serif;
  font-size: clamp(2.5rem, 6vw, 4.5rem);
  font-weight: 700;
  margin-bottom: 2rem;
  background: linear-gradient(135deg, #FF2E7E 0%, #BA94FF 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.about-cta__button {
  display: inline-flex;
  align-items: center;
  gap: 0.75rem;
  padding: 1.25rem 3rem;
  background: #FF2E7E;
  color: white;
  text-decoration: none;
  font-size: 1.125rem;
  font-weight: 700;
  border-radius: 12px;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.about-cta__button:hover {
  background: linear-gradient(135deg, #FF2E7E 0%, #BA94FF 100%);
  transform: translateY(-4px);
  box-shadow: 0 20px 40px rgba(255, 46, 126, 0.4);
}
</style>

<section class="about-cta">
  <div class="about-cta__content">
    <h2 class="about-cta__title">{{ section.settings.title }}</h2>
    <a href="{{ section.settings.button_link }}" class="about-cta__button">
      {{ section.settings.button_text }} â†’
    </a>
  </div>
</section>

{% schema %}
{
  "name": "About CTA",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Experience the Heat"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Hot Sauces"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/collections/all"
    }
  ]
}
{% endschema %}
